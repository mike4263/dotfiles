"let g:syntastic_check_on_wq = 0
"let g:syntastic_enable_perl_checker = 1
"let g:syntastic_loc_list_height = 1

" Go crazy!
if filereadable(expand("~/dotfiles/vimrc.local"))
  " In your .vimrc.local, you might like:
  "
